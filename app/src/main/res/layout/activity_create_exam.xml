<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ui.instructor.CreateExam">


    <EditText
        android:layout_width="match_parent"
        android:id="@+id/EexamName"
        android:hint="Exam Name"
        android:layout_height="45dp"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/EexamDate"
        android:hint="Exam Date"
        android:layout_height="45dp"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/EexamGrade"
        android:hint="Exam Grade"
        android:layout_height="45dp"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnCreateExam"
        android:text="Create exam"
        android:layout_height="45dp"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnAddYearWork"
        android:text="add year work"
        android:layout_height="45dp"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnAddCourse"
        android:text="add course"
        android:layout_height="45dp"/>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/addMan"
        android:layout_height="wrap_content"/>


</LinearLayout>