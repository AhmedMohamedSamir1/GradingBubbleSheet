<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_margin="10dp"
app:cardElevation="15dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpb_blue"
    android:padding="10dp">
    <TextView
        android:id="@+id/question_number_txt"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Question Number : "
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/correct_answer_txt"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Correct Answer : "
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewEnd"
        android:layout_marginRight="5dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/percentage_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percentage of students who choose A : 20%"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/question_number_txt"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/percentage_B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percentage of students who choose B : 20%"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/percentage_A"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/percentage_C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percentage of students who choose C : 20%"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/percentage_B"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/percentage_D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percentage of students who choose D : 20%"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/percentage_C"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
</RelativeLayout>

</androidx.cardview.widget.CardView>