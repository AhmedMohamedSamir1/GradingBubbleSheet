<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_gradient_animation_list"
    tools:context=".ui.instructor.fragment1Home">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/instructorHome2"
        android:layout_height="match_parent"



     >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/homeContainer"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-4dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Quiz"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/btn_createQuiz"
                android:layout_width="85dp"
                android:layout_height="79dp"
                android:background="@drawable/createquiz"
                android:gravity="center"
                android:text="Create Quiz"

                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Answers"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/btn_scanAnswers"
                android:layout_width="88dp"
                android:layout_height="95dp"
                android:background="@drawable/scananswers">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Analytics"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/analytics"
                android:layout_width="106dp"
                android:layout_height="85dp"
                android:background="@drawable/analytics">

            </ImageView>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>