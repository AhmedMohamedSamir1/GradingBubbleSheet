<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"   >

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="80sp"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:text="Q"
               android:textColor="@color/black"
               android:textSize="22sp"
               android:layout_marginTop="7sp"
               android:fontFamily="@font/aclonica"
               android:layout_marginRight="12sp"
               android:id="@+id/txtQuesNum"
               android:layout_height="wrap_content"/>
       </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ansGroup"
            android:layout_below="@+id/txtView">
            <RadioButton
                android:id="@+id/radioAnsA"
                android:layout_width="wrap_content"
                android:layout_marginRight="12sp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:buttonTint="@color/design_default_color_secondary_variant"
                android:layout_height="wrap_content"
                android:text="A"
                />
            <RadioButton
                android:id="@+id/radioAnsB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="12sp"
                android:buttonTint="@color/design_default_color_secondary_variant"
                android:textSize="22sp"
                android:text="B"
                />
            <RadioButton
                android:id="@+id/radioAnsC"
                android:layout_width="wrap_content"
                android:layout_marginRight="12sp"
                android:textColor="@color/black"
                android:buttonTint="@color/design_default_color_secondary_variant"
                android:layout_height="wrap_content"


                android:textSize="22sp"
                android:text="C" />
            <RadioButton
                android:id="@+id/radioAnsD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:buttonTint="@color/design_default_color_secondary_variant"
                android:textSize="22sp"
                android:text="D" />
        </RadioGroup>

    </LinearLayout>


</ScrollView>
