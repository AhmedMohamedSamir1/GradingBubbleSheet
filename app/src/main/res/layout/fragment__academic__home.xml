<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_gradient_animation_list"

    tools:context=".ui.academic.Fragment_Academic_Home">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/academicHome2"
        android:layout_height="match_parent"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/academic_homeContainer"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-4dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediction"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/btn_Prediction"
                android:layout_width="140dp"
                android:layout_height="79dp"
                android:background="@drawable/pred"
                android:gravity="center"
                android:text="Create Quiz"

                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Improve performance"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/btn_Improve"
                android:layout_width="141dp"
                android:layout_height="95dp"
                android:background="@drawable/improve">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Analytics"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/analytics"
                android:layout_width="81dp"
                android:layout_height="85dp"
                android:background="@drawable/generate3">

            </ImageView>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>